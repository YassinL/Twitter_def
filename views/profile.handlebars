<section class="section-accueil">

    <div class="tweet-navigation">
        <img class="tweet-navigation-image" src="../public/images/logoTwitter.png" alt="">       
        <div class="tweet-navigation-link">
            <a href="/home/{{username}}">Home</a>             
            <a href="">Explore</a>
            <a href="">Notifications</a>
            <a href="">Messages</a>
            <a href="">Bookmarks</a>
            <a href="">Lists</a>
            <a href="/profile/{{username}}">Profile</a>
            <a href="/logout">Logout</a>
        </div>
   
    </div>

    <div class="tweet-container">
        <div class="tweet-container-title">
            <h3>{{firstName}} {{lastName}}</h3>
        </div>
        <div class="tweet-container-profile">
            <div class="tweet-container-profile-background">
                <img src="" alt="">
            </div>
            <div class="tweet-container-profile-picture">
                <img src={{picture}} alt="">
            </div>
            <div class="tweet-container-profile-infos">
                <h3>{{firstName}} {{lastName}}</h3>
                <h4>@{{username}}</h4>
                <p>{{city}}</p>
            </div>
        </div>

        <div class="comments">
        {{#each message}}
            <div class="comments-comment">
                <img src="{{picture}}" alt="">
                <div class="comments-comment-content">
                    <div class="comments-comment-content-username">{{username}}</div>
                    <div class="comments-comment-content-text">{{ content }}</div>
                    <div class="comments-comment-content-date">{{ moment created_at "fromNow"}}</div>
                </div>
            </div>
        {{/each}}
        </div>

    </div>

    <div class="tweet-search"></div>

</section>
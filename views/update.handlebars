<div class="home">
    <img class="home-image"src="/public/images/logoTwitter.png" alt="logoTwitter">
    <h1 class="home-title">Modify your account</h1>
</div>


<form class="form" action="/update/{{username}}" method="post">
    <div class="form-input">
        <label for="first_name">First Name</label>
        <input type="text" name="first_name" id="first_name" value="{{firstName}}" required>
    </div>

    <div class="form-input">
        <label for="last_name">Last Name</label>
        <input type="text" name="last_name" id="last_name" value={{lastName}} required>
    </div>

    <div class="form-input">
        <label for="city">City</label>
        <input type="text" name="city" id="city" value={{city}}>
    </div>

    <div class="form-input">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" value={{email}} required>
    </div>

    <div class="form-input">
        <label for="telephone">Phone</label>
        <input type="tel" name="telephone" id="telephone" value="0{{telephone}}" pattern="[0-9]{10}" maxlength="10" minlength="10">
    </div>

    <div class="form-input">
        <label for="username">Username</label>
        <input type="text" name="username" id="username" value={{username}} required>
    </div>


    <button type="submit">Update</button>
</form>    